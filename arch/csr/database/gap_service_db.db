/* For service details, refer http://developer.bluetooth.org/gatt/services/ 
 * Pages/ServiceViewer.aspx?u=org.bluetooth.service.generic_access.xml 
 */

primary_service {
    uuid : UUID_GAP,
    name : "GAP_SERVICE",

    /* Device name characteristic- Read only */
    characteristic {
        uuid : UUID_DEVICE_NAME,
        name : "DEVICE_NAME",
        properties : [read write],
	flags : [FLAG_IRQ]
        value : BLE_DEVICE_NAME
    },

    characteristic {
        uuid : UUID_APPEARANCE,
        name : "DEVICE_APPEARANCE",
        properties : read,
	flags : [FLAG_IRQ]
        value : BLE_APPEARANCE
    },

